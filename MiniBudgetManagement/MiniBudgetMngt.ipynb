def main():
    # declare variables
    budget = 5000
    expenses = 0

    while True:
        print("\n--- Menu ---")
        print("1 - Add Expenses")
        print("2 - Subtract Expenses")
        print("3 - Add Income")
        print("4 - Remove Income")
        print("5 - Exit")

        try:
            menu = int(input("Select an option: "))
        except ValueError:
            print("Invalid input. Please enter a number.")
            continue

        print("Option selected:", menu)

        if menu == 1:
            budget, expenses = add_exp(budget, expenses)
        elif menu == 2:
            budget, expenses = sub_exp(budget, expenses)
        elif menu == 3:
            budget, expenses = add_inc(budget, expenses)
        elif menu == 4:
            budget, expenses = sub_inc(budget, expenses)
        elif menu == 5:
            print("Program terminated, thank you.")
            chk_budget(budget, expenses)
            break
        else:
            print("Invalid selection, choose a valid one.")


# UDF that adds amount to expenses and subtracts from the budget
def add_exp(budget, expenses):
    exp_add = int(input("Enter expense amount to be added: "))
    budget -= exp_add
    expenses += exp_add
    chk_budget(budget, expenses)
    return budget, expenses


# UDF that subtracts an amount from total and adds up in the budget
def sub_exp(budget, expenses):
    exp_sub = int(input("Enter expense amount to be subtracted: "))
    budget += exp_sub
    expenses -= exp_sub
    chk_budget(budget, expenses)
    return budget, expenses


# UDF that adds an amount in the budget
def add_inc(budget, expenses):
    inc_add = int(input("Enter income amount to be added: "))
    budget += inc_add
    chk_budget(budget, expenses)
    return budget, expenses


# UDF that subtracts an amount from the budget
def sub_inc(budget, expenses):
    inc_sub = int(input("Enter income amount to be subtracted: "))
    budget -= inc_sub
    chk_budget(budget, expenses)
    return budget, expenses


# UDF to check budget status
def chk_budget(budget, expenses):
    if budget <= 0:
        print("Budget depleted!!! You are out of budget")
    else:
        print(f"The budget remaining is: {budget} and total expenses is: {expenses}")


if __name__ == "__main__":
    main()

