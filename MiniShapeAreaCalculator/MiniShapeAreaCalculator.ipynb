def main():
    try:
        print("Which shape would you like to calculate the area for?")
        print(" 1. Square")
        print(" 2. Rectangle")
        print(" 3. Triangle")
        print(" 4. Circle")

        sel = input("Enter Option: ")

        if not chk_selection(sel):
            return  # Exit if invalid selection

        if sel == '1':
            area_square()
        elif sel == '2':
            area_rectangle()
        elif sel == '3':
            area_triangle()
        elif sel == '4':
            area_circle()

    except Exception as e:
        print(f"⚠️ An unexpected error occurred: {e}")
        print("Program terminated safely.")


# Validate menu selection
def chk_selection(sel):
    try:
        if not sel.isdigit() or int(sel) not in range(1, 5):
            print("Invalid selection, please enter between 1 to 4.")
            print("Program terminated!")
            return False
        return True
    except Exception:
        print("Error validating selection. Program terminated!")
        return False


# Helper to get numeric input
def get_number(prompt):
    while True:
        try:
            value = input(prompt)
            if value.isdigit():
                return int(value)
            elif isfloat(value):
                return float(value)
            else:
                print("Invalid input, please enter a number.")
        except Exception as e:
            print(f"Error reading input: {e}. Please try again.")


def area_square():
    side = get_number("Please enter the length of a side: ")
    print("The area of the square is", side ** 2)


def area_rectangle():
    length = get_number("Please enter the Length: ")
    width = get_number("Please enter the Width: ")
    print("The area of the rectangle is", length * width)


def area_triangle():
    base = get_number("Please enter the Base: ")
    height = get_number("Please enter the Height: ")
    print("The area of the triangle is", 0.5 * base * height)


def area_circle():
    radius = get_number("Please enter the radius: ")
    print("The area of the circle is", 3.1416 * radius ** 2)


def isfloat(value):
    try:
        float(value)
        return True
    except ValueError:
        return False


if __name__ == "__main__":
    main()
